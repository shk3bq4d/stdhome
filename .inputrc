$include /etc/inputrc
set editing-mode vi
#set editing-mode emacs
"\C-n":history-search-forward
"\C-p":dump-macros


set colored-stats On
set completion-ignore-case On
set completion-prefix-display-length 3
set mark-symlinked-directories On
set show-all-if-ambiguous On
set show-all-if-unmodified On
set visible-stats On

set show-mode-in-prompt on
# activating  vi-ins-mode-string and vi-cmd-mode-string looks good in bash
# and python -i. For ZSH, I had to add 
# ~/.oh-my-zsh/custom/plugins/vi-mode-mr/vi-mode-mr.plugin.zsh
set vi-ins-mode-string \1\e[5 q\2
set vi-cmd-mode-string \1\e[1 q\2
#set vi-ins-mode-string \1\e[48;5;117;1m\2 I \1\e[38;5;117;48;5;31;1m\2\1\e[0m\2
#set vi-cmd-mode-string \1\e[48;5;166;1m\2 N \1\e[38;5;166;48;5;31;1m\2\1\e[0m\2

# those two are for rxvt
"\e[1~":beginning-of-line
"\e[4~":end-of-line
